<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Bmr calculator application theme. -->
    <style name="BmrTheme" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/bmrBlue</item>
        <item name="colorPrimaryDark">@color/bmrGreen</item>
        <item name="colorAccent">@color/bmrGreen</item>
    </style>

    <style name="BmrTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="BmrTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="BmrTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
