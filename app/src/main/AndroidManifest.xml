<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.lab.calorie">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon_calorie"
        android:label="@string/app_name"
        android:roundIcon="@drawable/icon_calorie"
        android:supportsRtl="true"
        android:theme="@style/BmrTheme">
        <activity
            android:name=".SuccessSaveActivity"
            android:theme="@style/BmrTheme.NoActionBar" />

        <activity
            android:name=".PickDateActivity"
            android:theme="@style/BmrTheme.NoActionBar" />

        <service
            android:name=".FoodApiService"
            android:enabled="true"
            android:exported="true" />

        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".BmrResultActivity" />
        <activity android:name=".PickMenuActivity" />
    </application>

</manifest>